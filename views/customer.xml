<odoo>
    <record id="customer_tree_view" model="ir.ui.view">
        <field name="name">Khách Hàng</field>
        <field name="model">customer</field>
        <field name="arch" type="xml">
            <tree create="false" edit="false">
                <field name="name" string="Họ tên"/>
                <field name="gender"/>
                <field name="phone"/>
                <field name="address"/>
                <field name="price"/>
                <field name="status"/>
                <field name="note"/>
            </tree>
        </field>
    </record>

    <record id="customer_form_view" model="ir.ui.view">
        <field name="name">Khách Hàng</field>
        <field name="model">customer</field>
        <field name="arch" type="xml">
            <form create="false">
                <sheet>
                    <group>
                        <group>
                            <field name="name" string="Họ tên"/>
                            <field name="phone"/>
                            <field name="status"/>
<!--                            <field name="price"/>-->
                        </group>
                        <group>
                            <field name="gender"/>
                            <field name="address"/>
                            <field name="note"/>
                            <field name="planed"/>
                        </group>
                    </group>

                    <div class="card">
                        <div class="card-header">
                            KẾ HOẠCH LÃNH VÉ THEO ĐÀI
                        </div>
                        <div class="card-body">
                            <div class="table">
                                <table class="table table-bordered">
                                    <tbody>
                                        <tr>
                                            <td>Thứ 2:</td>
                                            <td><label for="HCM" string="TP HCM"/><field name="HCM"/></td>
                                            <td><label for="DT" string="ĐT"/><field name="DT"/></td>
                                            <td><label for="CM" string="CM"/><field name="CM"/></td>
                                        </tr>
                                        <tr>
                                            <td>THỨ 3:</td>
                                            <td><label for="BL" string="BL"/><field name="BL"/></td>
                                            <td><label for="BT" string="BT"/><field name="BT"/></td>
                                            <td><label for="VT" string="VT"/><field name="VT"/></td>
                                        </tr>
                                        <tr>
                                            <td>THỨ 4:</td>
                                            <td><label for="ST" string="ST"/><field name="ST"/></td>
                                            <td><label for="CT" string="CT"/><field name="CT"/></td>
                                            <td><label for="DN" string="ĐN"/><field name="DN"/></td>
                                        </tr>
                                        <tr>
                                            <td>THỨ 5:</td>
                                            <td><label for="TN" string="TN"/><field name="TN"/></td>
                                            <td><label for="AG" string="AG"/><field name="AG"/></td>
                                            <td><label for="BTH" string="BTH"/><field name="BTH"/></td>
                                        </tr>
                                        <tr>
                                            <td>THỨ 6:</td>
                                            <td><label for="BD" string="BD"/><field name="BD"/></td>
                                            <td><label for="TV" string="TV"/><field name="TV"/></td>
                                            <td><label for="VL" string="VL"/><field name="VL"/></td>
                                        </tr>
                                        <tr>
                                            <td>THỨ 7:</td>
                                            <td><label for="HCM_2" string="TP HCM"/><field name="HCM_2"/></td>
                                            <td><label for="LA" string="LA"/><field name="LA"/></td>
                                            <td><label for="BP" string="BP"/><field name="BP"/></td>
                                            <td><label for="HG" string="HG"/><field name="HG"/></td>
                                        </tr>
                                        <tr>
                                            <td>CHỦ NHẬT:</td>
                                            <td><label for="KG" string="KG"/><field name="KG"/></td>
                                            <td><label for="DL" string="ĐL"/><field name="DL"/></td>
                                            <td><label for="TG" string="TG"/><field name="TG"/></td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="customer_action_view" model="ir.actions.act_window">
        <field name="type">ir.actions.act_window</field>
        <field name="name">Khách hàng</field>
        <field name="res_model">customer</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="create_customer_action_view" model="ir.actions.act_window">
        <field name="type">ir.actions.act_window</field>
        <field name="name">Thêm mới khách hàng</field>
        <field name="res_model">customer</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="view_id" ref="customer_form_view_wz"/>
    </record>

    <menuitem id="customer_menu_view"
              name="Khách hàng"
              web_icon="lottery,static/src/img/icons_green/crm.png"
              action="customer_action_view"/>

    <menuitem id="create_customer_menu_view"
              name="Thêm mới khách hàng" parent="customer_menu_view"
              action="create_customer_action_view"/>
</odoo>